{
  "buildCommand": "bash vercel-build.sh",
  "outputDirectory": "public",
  "env": {
    "REACT_APP_BACKEND_URL": "/api",
    "CACHE_BUST": "2026-01-23-02-46-00"
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" }
  ],
  "routes": [
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/service-worker.js",
      "dest": "/service-worker.js",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/icons/(.*)",
      "dest": "/icons/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/admin(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/rider(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/login",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
